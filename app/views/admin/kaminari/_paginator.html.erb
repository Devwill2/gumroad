<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
%>

<%= paginator.render do %>
  <%# TODO: Migrate to React Pagination component - replace with <Pagination /> component %>
  <div class="flex gap-2 w-full justify-center" role="navigation" aria-label="Pagination">
    <%= first_page_tag %>
    <%= prev_page_tag %>
    <div class="hidden lg:flex lg:flex-grow lg:justify-center lg:gap-2">
      <% each_page do |page| %>
        <% if page.display_tag? %>
          <%= page_tag page %>
        <% end %>
      <% end %>
    </div>
    <%= next_page_tag %>
    <%= last_page_tag %>
  </div>
<% end %>
